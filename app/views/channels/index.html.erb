<h1>频道管理</h1>

<table>
  <tr>
    <th>Id</th>
    <th>标题</th>
    <th>内容数量</th>
    <th>上级</th>
    <th>Lft</th>
    <th>Rgt</th>
  </tr>

<% @channels.each do |channel| %>
  <tr>
    <td><%=h channel.id %></td>
    <td><%='---'*channel.level%><%= h channel.title %></td>
    <td><%=h channel.contents_count %></td>
    <td><%=h channel.parent.try(:title) %></td>
    <td><%=h channel.lft %></td>
    <td><%=h channel.rgt %></td>
    <td><%= link_to 'Show', channel %></td>
    <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
    <td><%= link_to 'Destroy', channel, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

