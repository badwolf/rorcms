<h1>Listing comments</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Commentable type</th>
    <th>Commentable</th>
    <th>Content</th>
    <th>User</th>
    <th>Visitor name</th>
    <th>Visted ip</th>
    <th>Vote for</th>
    <th>Vote against</th>
    <th>State</th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%=h comment.id %></td>
    <td><%=h comment.commentable_type %></td>
    <td><%=h comment.commentable_id %></td>
    <td><%=h comment.content %></td>
    <td><%=h comment.user_id %></td>
    <td><%=h comment.visitor_name %></td>
    <td><%=h comment.visted_ip %></td>
    <td><%=h comment.vote_for %></td>
    <td><%=h comment.vote_against %></td>
    <td><%=h comment.state_id %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_comment_path %>
